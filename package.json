{
    "name": "vscode-tidymarkdown",
    "displayName": "Tidy Markdown Formatter",
    "description": "Formatter for markdown using the tidy-markdown formatter",
    "license": "BSD-3-Clause",
    "version": "0.0.5",
    "publisher": "tehnix",
    "engines": {
        "vscode": "^1.6.0"
    },
    "homepage": "https://github.com/Tehnix/vscode-tidymarkdown",
    "bugs": {
        "url": "https://github.com/Tehnix/vscode-tidymarkdown/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Tehnix/vscode-tidymarkdown"
    },
    "categories": [
        "Formatters",
        "Programming Languages"
    ],
    "keywords": [
        "formatter",
        "markdown",
        "tidy markdown",
        "tidymarkdown"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#B2322F",
        "theme": "dark"
    },
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Tidy Markdown configuration",
            "properties": {
                "tidyMarkdown.disableFormatter": {
                    "type": "boolean",
                    "default": false,
                    "description": "Explicitly enable/disble the Tidy Markdown formatter"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run bundle",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "build": "vsce package",
        "bundle": "rollup -c ./rollup.config.js"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^11.1.0",
        "@rollup/plugin-json": "^4.0.3",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.9.3",
        "rollup": "^2.7.2",
        "typescript": "^3.8.3",
        "vsce": "^1.75.0",
        "vscode": "^1.1.36"
    },
    "dependencies": {
        "@f-fjs/tidy-markdown": "^2.1.2",
        "front-matter": "^3.1.0",
        "js-yaml": "^3.13.1",
        "parse5": "^6.0.0",
        "remark": "^12.0.0",
        "remark-preset-lint-markdown-style-guide": "^3.0.0"
    }
}