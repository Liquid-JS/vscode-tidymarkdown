{
    "name": "vscode-tidymarkdown",
    "displayName": "Tidy Markdown Formatter",
    "description": "Formatter for markdown using the tidy-markdown formatter",
    "license": "BSD-3-Clause",
    "version": "0.0.2",
    "publisher": "tehnix",
    "engines": {
        "vscode": "^1.6.0"
    },
    "homepage": "https://github.com/Tehnix/vscode-tidymarkdown",
    "bugs": {
        "url": "https://github.com/Tehnix/vscode-tidymarkdown/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Tehnix/vscode-tidymarkdown"
    },
    "categories": [
        "Formatters",
        "Languages"
    ],
    "keywords": [
        "formatter",
        "markdown",
        "tidy markdown",
        "tidymarkdown"
    ],
    "galleryBanner": {
        "color": "#B2322F",
        "theme": "dark"
    },
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Tidy Markdown configuration",
            "properties": {
                "tidyMarkdown.disableFormatter": {
                    "type": "boolean",
                    "default": false,
                    "description": "Explicitly enable/disble the Tidy Markdown formatter"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "vscode": "^1.1.6",
        "typescript": "^2.6.1"
    },
    "dependencies": {
        "tidy-markdown": "^2.0.4"
    }
}
